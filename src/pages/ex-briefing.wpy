<script>
  import wepy from 'wepy'
  import {ajax} from '../components/ajax.js'
  import zanPop from '../components/zan-popup'
  import formIds from "../mixins/formIds"
  import moment from 'moment'
  import share from "../mixins/boot";

  const getCt = function() {
    const d = new Date()
    const dx = new Date([d.getFullYear(), d.getMonth() + 1, d.getDate()].join('/') + ' 00:00:00').getTime()
    const dt = new Date(this.todayInfo.lastTime).getTime()

    if(!dt) {
      return this.ct = 1
    } else if(dt - dx < 86400000 && dt - dx > 0){
      this.ct = 0
    } else if(dt - dx < 0 && dt - dx > -86400000) {
      this.ct = 1
    } else {
      this.ct = Math.round((dx - dt) / 86400000)
    }
  }
  /**
   * 获取历史练习数据
   */
  const briefHistoryInfo = function () {
    ajax({
      ins: this,
      url: '/brief/history/info',
      params: {
        // timeType/分类/整型 1=查询本周，2=查询本月，3=查询全
        timeType: this.timeType,
        userId: this.queryUserId
      },
      success: (d) => {
        const trainInfo = d.trainInfo || {
          totalTrainDay: 0,
          averageDayTime: 0,
          totalCount: 0,
          averageEveryTime: 0,
          singleMostDuration: 0
        }
        Object.assign(this, trainInfo)
        this.$apply()
      }
    })
  }

  /**
   * 获取今日练习数据
   */
  const getTodayInfo = function () {
    ajax({
      ins: this,
      url: '/brief/today/info',
      params: { userId: this.queryUserId },
      success: (d) => {
        const trainInfo = d.trainInfo || {}
        if (trainInfo) {
          this.todayInfo.todayTrainCount = trainInfo.todayTrainCount || 0
          this.todayInfo.todayDuration = trainInfo.todayDuration || 0
          this.todayInfo.continuousNum = trainInfo.continuousNum || 0
          this.todayInfo.maxContinuousNum = trainInfo.maxContinuousNum || 0
          this.todayInfo.lastTime = trainInfo.lastTime || 0
          getCt.call(this)
        }
        this.$apply()
      }
    })
  }

  const getUserInfo = function (userId) {
    let params = {}
    if (userId) {
      params.userId = userId
    }

    ajax({
      ins: this,
      url: '/brief/user/info',
      params,
      success: (d) => {
        this.userId = d.id
        this.upstateState = d.isMe || !userId
        this.isMe = d.isMe
        this.userInfo = d
        this.$apply()
      }
    })
  }

  const getToken = function () {
    const that = this
    return new Promise((resolve, reject) => {
      wx.login({
        success (data) {
          console.log('登录成功, %o', data)


          ajax({
            ins: that,
            url: '/weixin/token',
            params: {
              authCode: data.code
            },
            method: 'POST',
            success: (d) => {
              console.log('授权成功 %o, token ok', d)
              wx.setStorage({
                key: 'token',
                data: d,
                success: function(res){
                  console.log('本地存储 token 成功')
                  resolve()
                }
              })
            },
            fail: () => {
              ajax({
                ins: that,
                url: '/weixin/token/refresh',
                params: {
                  authCode: data.code
                },
                method: 'POST',
                success: (d) => {
                  wx.setStorage({
                    key: 'token',
                    data: d,
                    success: function(res){
                      console.log('本地存储 token 成功')
                    }
                  })
                  resolve()
                },
                fail: () => {
                  console.log('多次授权失败')
                  reject()
                }
              })
            }
          })
        }
      })
    })
  }
  /**
   * 获取动态练习记录
   */
  const dynamicFind = function () {
    const pageSize = 10
    this.dynamicDataLoading = true
    ajax({
      ins: this,
      url: '/dynamic/find',
      method: 'POST',
      params: {
        // findType/查询类型/整型, 1=查询所有，2=查询状态记录，3=查询练习日记
        findType: this.dynamicTimeType,
        offset: (this.page - 1) * pageSize,
        count: pageSize,
        userId: this.queryUserId
      },
      success: (data) => {
        if (data && data.length) {
          for (let d of data) {
            let timeDesc = moment(d.strCreateTime, 'YYYY-MM-DD HH:mm:ss').startOf('minute').fromNow()

            timeDesc = moment(d.strCreateTime, 'YYYY-MM-DD HH:mm:ss').startOf('minute').fromNow()
            timeDesc = timeDesc.replace('hours ago', '小时前')
            timeDesc = timeDesc.replace('an hour ago', '1 小时前')

            if (timeDesc.indexOf('seconds ago') >= 0) {
              timeDesc = '1 分钟前'
            } else if (timeDesc.indexOf('minute ago') >= 0) {
              timeDesc = '1 分钟前'
            }else if (timeDesc.indexOf('hour ago') >= 0) {
              timeDesc = '1 小时前'
            } else {
              timeDesc = timeDesc.replace('minutes ago', '分钟前')
            }

            d.strCreateTimeStr = timeDesc
            d.readAll = false
          }
          if (data.length && this.page == 1) {
            this.dynamicList = data
          } else {
            this.dynamicList = this.dynamicList.concat(data)
          }

          this.page++
          this.hasData = data.length && data.length >= pageSize
          this.dynamicDataLoading = false
        } else {
          if (this.page == 1) {
            this.dynamicList = []
          }
          this.hasData = false
          this.dynamicDataLoading = false
        }
        this.$apply()
      }
    })
  }

  const dynamicSave = function (id, title, content) {
    let url = '/train/experience'
    let params = {
      trainId: id,
      content
    }

    ajax({
      ins: this,
      url,
      params,
      method: 'POST',
      success: (d) => {
        this.$invoke('editEx', 'togglePopup')
        this.page = 1
        this.hasData = true
        dynamicFind.call(this)
        this.$apply()
      }
    })
  }


  /**
   * 删除日记
   */
  const dynamicDel = function (refId, afterRecord) {
    const url = afterRecord ? '/train/del' : '/diary/del'
    ajax({
      ins: this,
      url: url,
      method: 'POST',
      params: {
        id: refId
      },
      success: (d) => {
        this.page = 1
        this.hasData = true
        dynamicFind.call(this)
      }
    })
  }

  export default class Tag extends wepy.page {
    config = {
      disableScroll: false,
      navigationBarTitleText: '练习简报',
      enablePullDownRefresh: true
    }
    components = {
      deleteEx: zanPop,
      editEx: zanPop
    }
    data = {
      page: 1,
      hasData: true,
      dynamicDataLoading: false,
      isLoading: false,
      userId: '',
      upstateState: false,
      ct: 1,
      dynamic: {},
      dynamicList: [],
      totalTrainDay: 0,
      averageDayTime: 0,
      totalCount: 0,
      averageEveryTime: 0,
      singleMostDuration: 0,
      continuousNum: 0,
      showFeaturesList: false,
      userInfo: {},
      timeType: 1,
      dynamicTimeType: 1,
      todayInfo: {
        // 今日练习次数
        todayTrainCount: 0, //整型
        // 今日练习总时长（分钟）
        todayDuration: 0,
        // 最新连续练习记录中的连续天数
        continuousNum: 0,
        // 最大连续练习天数
        maxContinuousNum: 0
      },
      picUrl: '',
      isShowShare: false,
      isShowImage: false,
      queryUserId: '',
    }
    mixins = [ share, formIds ]
    onGotUserInfo(e) {
    }
    methods = {
      timeTypeChange(timeType) {
        console.log(timeType)
        this.timeType = timeType

        // 获取历史练习数据
        briefHistoryInfo.call(this)
      },
      dynamicTimeTypeChange(dynamicTimeType) {
        console.log(dynamicTimeType)
        this.dynamicTimeType = dynamicTimeType

        this.page = 1
        this.hasData = true
        // 获取历史练习数据
        dynamicFind.call(this)
      },
      /**
       1、从简报页右上角直接转发，
       标题：“XXX的练习简报”
       链接：练习简报
       2、有今日数据那的去打卡，
       标题：“用户昵称+“练习方法”+ 分钟数 + “分钟，” + “连续第N天””
       链接：练习简报
       3、有练习记录区的某条练习记录转发
       标题：“用户昵称+“练习方法”+ 分钟数 + “分钟，” + “连续第N天””
       链接：练习简报
       4、有练习日记转发
       标题：“XXX的《”+日记名称+“》”。
       链接：日记查询页面（日记查询接口）
       * @param res
       * @return {{title: string, path: string, imageUrl: string, complete: complete}}
       */
      onShareAppMessage (res) {
        const shareBtnId = res.target ? res.target.id : ''
        const nickName = this.userInfo.nickName

        // 从简报页右上角直接转发
        let path = 'pages/ex-briefing?_f=1&userId=' + this.userId
        let title = nickName + '的练习简报'
        // path = '/pages/setex'

        // 去打卡
        if (shareBtnId == 'wxBtn') {
          title = nickName + `今天练习${this.todayInfo.todayTrainCount}次，共${this.todayInfo.todayDuration}分钟`
        }
        // 日记分享
        if (shareBtnId && shareBtnId.indexOf('briefingShare5') >= 0) {
          const arr = shareBtnId.split('_')
          if (arr.length == 2 && !isNaN(arr[1])) {
            title = nickName + '的' + (this.dynamicList[parseInt(arr[1])].title || '')
          }
        } else if (shareBtnId && shareBtnId.indexOf('briefingShare') >= 0) {
          // 其它练习状态
          title = nickName + `今天练习${this.todayInfo.todayTrainCount}次，共${this.todayInfo.todayDuration}分钟`
        }

        let imageUrl = ''
        if (this.shareUrl) {
          imageUrl = this.resPerfix + this.shareUrl + '?' + Date.now()
        }

        const shareParam = {
          title,
          path,
          imageUrl: imageUrl,
          complete: (e) => {
            console.log(e)
          }
        }

        return shareParam
      },
      contentInput(e) {
        this.dynamic.content = e.detail.value
      },
      edit(item) {
        this.dynamic = item

        // 修改日记
        if (item.iconType == 5) {
          this.$parent.globalData.diaryTitle = this.dynamic.title
          this.$parent.globalData.diaryContent = this.dynamic.content
          this.$parent.globalData.diaryId = this.dynamic.refId
          this.$parent.globalData.readOnly = false
          this.$navigate('./ex-diary')
        } else {
          this.$invoke('editEx', 'togglePopup')
        }
      },
      editExCancel() {
        this.$invoke('editEx', 'togglePopup')
      },
      editInfoSave() {
        const that = this

        setTimeout(_ => {
          const {refId, title, content} = that.dynamic
          if (!content) {
            return wx.showToast({
              title: '请录入练习状态',
              icon: 'error',
              duration: 2000,
              mask:true
            })
          }
          dynamicSave.apply(that, [refId, title, content])
        }, 200)
      },
      deleteEx(item) {
        this.dynamic = item
        this.$invoke('deleteEx', 'togglePopup')
      },
      deleteExCancel() {
        this.$invoke('deleteEx', 'togglePopup')
      },
      deleteComfirm() {
        dynamicDel.apply(this, [this.dynamic.refId, this.dynamic.afterRecord])
        this.$invoke('deleteEx', 'togglePopup')
      },
      processShow(item) {
        if (item) {
          this.dynamic = item
        }

        this.showFeaturesList = true
      },
      processHide() {
        this.showFeaturesList = false
      },
      toExDiary() {
        this.$parent.globalData.diaryTitle = ''
        this.$parent.globalData.diaryContent = ''
        this.$parent.globalData.diaryId = ''
        this.$parent.globalData.readOnly = false

        this.$navigate('./ex-diary')
        this.showFeaturesList = false
      },
      toExDiaryAdd() {
        this.$navigate('./ex-diary-add')
        this.showFeaturesList = false
      },
      readAllContent(item, index) {
        this.dynamic = item
        this.$parent.globalData.diaryTitle = item.title
        this.$parent.globalData.diaryContent = item.content
        this.$parent.globalData.diaryId = item.refId
        this.$parent.globalData.readOnly = !this.upstateState
        this.$navigate('./ex-diary')
      },
      onTapStop() {
        this.isShowShare = false
      },
      onHideImage() {
        console.log('onHideImage')
        this.isShowImage = false
      },
      onShowShare() {
        console.log('onShowShare')
        // 获取分享地址
        ajax({
          ins: this,
          url: '/train/punch/image',
          params: {},
          success: (d) => {
            this.shareUrl = d
            this.isShowShare = true
            this.$apply()
          },
          fail: () => {
            wx.showToast({
              title: '获取分享图片失败',
              icon: 'error',
              duration: 2000,
              mask:true
            })
          }
        })
      },
      onSave() {
        //文件下载
        wx.downloadFile({
          url: this.picUrl,
          success: (res) => {
            wx.saveImageToPhotosAlbum({
              filePath: res.tempFilePath,
              success: (data) => {
                wx.showToast({
                  title: '保存成功',
                  duration: 2000,
                  mask:true
                })
                this.isShowImage = false
                this.$apply()
                console.log(data);
              },
              fail: (err) => {
                wx.showToast({
                  title: err,
                  icon: 'error',
                  duration: 2000,
                  mask:true
                })
                this.isShowImage = false
                this.$apply()

                if (err.errMsg === "saveImageToPhotosAlbum:fail auth deny") {
                  wx.openSetting({
                    success(settingdata) {
                      console.log(settingdata)
                      if (settingdata.authSetting['scope.writePhotosAlbum']) {
                        console.log('获取权限成功，给出再次点击图片保存到相册的提示。')
                      }else {
                        console.log('获取权限失败，给出不给权限就无法正常使用的提示')
                      }
                    }
                  })
                }
              }
            })
          }
        })
      },
      // 文字信息打卡
      textMark() {
        this.$navigate('./ex-text-mark');
      }
    }
    onLoad(options) {
      console.log('queryUserId', options)
      this.queryUserId = options.userId || ''
    }
    onPullDownRefresh() {
      console.log('onPullDownRefresh')
    }
    onReachBottom() {
      console.log('onReachBottom' + this.hasData)
      if (!this.hasData) return

      dynamicFind.call(this)
    }
    async onShow() {
      this.isLoading = true
      wx.showLoading({title: '加载中..'})
      this.page = 1
      this.hasData = true
      const userId = this.queryUserId
      this.backgroundImage = this.$parent.globalData.endImage;
      this.resPerfix = this.$parent.globalData.resPerfix;
      if (!userId) {
        this.$parent.getUserInfo((userInfo) => {
          if (userInfo) {
            this.userInfo = userInfo
          }

          this.$apply()
        })
      } else {
        const d = wx.getStorageSync('token')
        if (!d) {
          await getToken.call(this)
        }
      }

      getUserInfo.call(this, userId || '')
      // 获取历史练习数据
      briefHistoryInfo.call(this)
      // 获取今日练习数据
      getTodayInfo.call(this)
      // 获取动态练习记录
      dynamicFind.call(this)
      this.isLoading = false
      setTimeout(_ => {
        wx.hideLoading()
      }, 200)
    }
  }
